{
  "name": "santa-puppets",
  "version": "1.0.0",
  "description": "Santa @ Puppets",
  "main": "src/index.js",
  "scripts": {
    "setup": "rm -rf public && mkdir -p public/js",
    "img": "cp -r static/img public/img",
    "libs": "cp -r static/libs public/libs",
    "models": "cp -r static/models public/models",
    "html": "cp static/index.html public/index.html",
    "assets": "npm run setup && npm run img && npm run libs && npm run models && npm run html",
    "watch": "npm run assets && BUILD_DEV=1 BUILD_PROD=0 webpack --progress --colors --watch",
    "build_dev": "npm run assets && BUILD_DEV=1 BUILD_PROD=0 webpack --progress --colors",
    "build": "npm run assets && BUILD_DEV=0 BUILD_PROD=1 webpack -p --progress --colors",
    "start": "python -m SimpleHTTPServer 8000"
  },
  "author": "Gorka",
  "license": "MIT",
  "browserify": {},
  "dependencies": {
    "google-url": "0.0.4",
    "jquery": "^2.1.4",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "simple-peer": "^8.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.2.1",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "json-loader": "^0.5.7",
    "webpack": "^1.12.9"
  }
}
